import BaseLayout from '../layouts/BaseLayout.astro'
---
<BaseLayout>
  
  <h1 class="pb-4 mx-6 mb-10 text-4xl font-bold border-b-2 lg:text-5xl lg:mx-20 border-base-300">Features</h1>
  <div class="grid gap-6 mx-6 md:grid-cols-2 xl:grid-cols-3 lg:mx-20">

    <div class="transition-all duration-200 card bg-base-200 hover:shadow-xl hover:-translate-y-2 hover:bg-base-100">
      <div class="text-center card-body">
        <svg class="w-10 h-10 mx-auto mb-6 text-blue-500 fill-current" xmlns="http://www.w3.org/2000/svg" width="1792" height="1792" viewBox="0 0 1792 1792"><path d="M1376 768q40 0 68 28t28 68v576q0 40-28 68t-68 28h-960q-40 0-68-28t-28-68v-576q0-40 28-68t68-28h32v-320q0-185 131.5-316.5t316.5-131.5 316.5 131.5 131.5 316.5q0 26-19 45t-45 19h-64q-26 0-45-19t-19-45q0-106-75-181t-181-75-181 75-75 181v320h736z"/></svg>
